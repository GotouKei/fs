<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingTop="9dp"
    android:paddingEnd="20dp"
    android:paddingBottom="10dp"
    android:descendantFocusability="blocksDescendants">

    <!--名前-->
    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text12Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="14"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:ignore="Suspicious0dp" />

        <TextView
            android:id="@+id/text12Job"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text11Hp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textColor="#000000"
            android:text="HP"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text12Hp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text11Mp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:textColor="#000000"
            android:text="MP"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text12Mp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text11Str"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:textColor="#000000"
            android:text="STR"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text12Str"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text11Def"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:textColor="#000000"
            android:text="DEF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text12Def"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text11Agi"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:text="AGI"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text12Agi"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
